<div class="flex-col min-h-screen bg-black text-silver">
  <!-- 検索窓の追加 -->
  <div class="search-container">
    <%= form_with url: search_sakes_path, method: :get, local: true do %>
      <div class="input-group">
        <input type="text" name="query" placeholder="日本酒を検索" class="w-full p-3 pl-10 bg-black text-silver border border-silver rounded-pill" value="<%= params[:query] %>">
        <button type="submit" class="ms-1">
          <svg class="h-5 w-5 text-silver" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.9 14.32a8 8 0 111.41-1.41l4.39 4.39a1 1 0 01-1.42 1.42l-4.39-4.39zM8 14a6 6 0 100-12 6 6 0 000 12z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    <% end %>
  </div>

  <h1 class="text-center mt-8">日本酒一覧</h1>

  <% if @sakes.any? %>
    <div class="user-profile-container mt-8">
      <div class="user-profile-box">
        <div class="sakes-grid">
          <% @sakes.each do |sake| %>
            <div class="sake-item">
              <i class="fas fa-glass-whiskey"></i> <!-- 盃アイコン -->
              <%= link_to sake.name, sake_path(sake, return_to: request.fullpath), class: 'text-silver sakebtn no-underline hover:underline' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <p>該当する日本酒が見つかりませんでした。</p>
  <% end %>
</div>
