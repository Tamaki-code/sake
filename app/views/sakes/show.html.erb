<div class="user-profile-container">
  <div class="user-profile-box">
    <h3><%= @sake.name %></h3>
    <p class="mt-4">酒造: 
      <% if @sake.brewery.present? %>
        <%= @sake.brewery.name %>
      <% else %>
        未登録
      <% end %>
    </p>
    <p>都道府県: <%= @sake.brewery.region.name %></p>

    <div class="btn-group">
      <%= link_to new_sake_review_path(@sake), class: 'btn btn-custom' do %>
        <i class="fas fa-edit"></i> レビュー作成
      <% end %>
      <%= link_to sake_reviews_path(@sake), class: 'btn btn-custom' do %>
        <i class="fas fa-eye"></i> レビュー表示
      <% end %>
      
    </div>
    <div class="return-button mt-4">
      <%= link_to params[:return_to] || search_sakes_path, class: 'btn btn-custom btn-circle' do %>
        <i class="fas fa-arrow-left"></i>
      <% end %>
    </div>
  </div>
</div>
