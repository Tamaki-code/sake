<div class="flex flex-col items-center justify-center min-h-screen bg-black text-silver">
  <h1 class="text-6xl font-bold mb-4">SakeApp</h1>
  <p class="text-sm mb-8">このアプリの説明</p>

  <div class="search-container">
  <%= form_with url: search_sakes_path, method: :get, local: true do %>
    <input type="text" name="query" placeholder="日本酒を検索" class="w-full p-3 pl-10 bg-black text-silver border border-silver rounded">
    <button type="submit">
      <svg class="h-5 w-5 text-silver" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M12.9 14.32a8 8 0 111.41-1.41l4.39 4.39a1 1 0 01-1.42 1.42l-4.39-4.39zM8 14a6 6 0 100-12 6 6 0 000 12z" clip-rule="evenodd" />
      </svg>
    </button>
  <% end %>
</div>


